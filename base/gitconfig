[pull]
	# SEE: https://stackoverflow.com/questions/2472254/when-should-i-use-git-pull-rebase
	rebase  = false
[alias]
	lua = log --all --author
	ds = diff --staged
	cr = clone --recursive
	# https://www.shellhacks.com/git-diff-staged-unstaged-files/
	d  = status -vv
	co = checkout
	cm = commit -a
	st = status
	tip = rev-parse HEAD
	pr = pull --recurse-submodules
	# Checkout submodules
	sco = submodule update --init --recursive
	supr = submodule update --remote
	sup = submodule update
	sin = submodule init
	rb = checkout --track
	br = branch --remote
	# List all branches, including remote
	lsb = branch -a
[init]
	defaultBranch = main
[core]
	excludesfile = ~/.gitignore
[fetch]
	prune = true
[submodule]
	recurse = true
[push]
	autoSetupRemote = true
