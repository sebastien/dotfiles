# https://ghostty.org/docs/config/keybind

clipboard-read=allow
clipboard-write=allow

# The syntax is "key = value". The whitespace around the
# equals doesn't matter.
# theme = "Purple Rain"
background = 062a38
background-opacity = 0.9
background-blur-radius = 0
foreground = f7f7f7
cursor-color = 0087ff
cursor-style = block
cursor-style-blink = true
macos-titlebar-style = tabs

# Comments start with a `#` and are only valid on their own line.
# Blank lines are ignored!

keybind = ctrl+shift+p=toggle_command_palette
keybind = ctrl+shift+x=close_surface
keybind = ctrl+shift+z=toggle_fullscreen
keybind = ctrl+shift+e=new_split:right
keybind = ctrl+shift+q=new_split:down
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+0=reset_font_size
keybind = ctrl+shift+minus=decrease_font_size:1
theme = "Molokai"
# Empty values reset the configuration to the default value
# font-family = "IosevkaTerm NFM"
font-family = "IosevkaTerm NFM Light"
font-family-bold = "IosevkaTerm NFM Medium"
# font-family = "PragmataPro Nerd Font"
# font-family = "Pragmasevka_NF"

# Shaders: git clone --depth 1 https://github.com/hackr-sh/ghostty-shaders
custom-shader = ~/.config/ghostty/shaders/cursor_blaze.glsl

# EOF
